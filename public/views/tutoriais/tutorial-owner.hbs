<main id="main-owner-tutorial">
  {{!-- userInformation é só o article --}}
  {{!-- userInformation.userId é a informação do article do usuario --}}
  <h1>{{this.userInformation.text}}</h1>
  <span>{{this.userInformation.userId.name}}</span>

  {{#if Article}}
  <h1>{{this.title}}</h1>
  <h1>{{this.text}}</h1>
  <span>{{this.name}}</span>
  {{/if}}

  {{!-- caso error, recebera o error --}}
  {{#if error}}
  <h1>{{error}}</h1>
  {{/if}}

  <form action="/tutorial/remove?id={{this.userInformation._id}}" method="POST">
    <button type="submit" id="button-remove-owner"> REMOVE </button>
  </form>

  <button id="comments-view">COMENTARIOS</butt>
</main>

<section id="section-comments">
  <button class="exit-comments">EXIT</button>

  <h2 id="h2-comment-tile"></h2>
  <div class="div-comments"></div>

    <form action="/comments-tutorial/create?id={{this.userInformation._id}}" method="post">
      <textarea name="text" id="text-comment" cols="100" rows="6"></textarea>
      <button type="submit" id="div-comments-create"> COMMENTE VOCE TAMBEM </button>
    </form>

</section>