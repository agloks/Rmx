<main id="main-owner-tutorial">
  {{!-- userInformation é só o article --}}
  {{!-- userInformation.userId é a informação do article do usuario --}}
  <nav class="nav-tutorial">

    <img src="../images/Mixer-logo-02.png" alt="logo" height="100">
    <ul class="d-none d-md-inline-flex">
      <li> <a href="/">Home</a></li>
      <li> <a href="/vitrine">Projects</a></li>
      <li> <a href="/tutorial">Tutorials</a> </li>
      {{!-- <ffffffli> <a href="/forum">Comunity</a> </li> --}}
      <li> <a href="/login">Login</a> </li>
      <li> <a href="/sign">Signup</a> </li>

    </ul>

  </nav>

  <div data-aos="fade-right" class="user-main-info">
    <div class="user-icon">
      <img src="../../{{this.userInformation.userId.image}}" alt="user_icon">
    </div>
    <div class="tutorial-h1-flex">
      <h1>{{this.userInformation.title}}</h1>
      <div class="remove-and-edit-tutorial">
        <form action="/tutorial/remove?id={{this.userInformation._id}}" method="POST">
          <button type="submit" class="button-remove-owner exclusive-button-remove">
            <p>Remove</p>
          </button>
        </form>
        <button type="submit" class="button-edit-owner">
          <a href="/tutorial/editView?id={{this.userInformation._id}}">Edit</a>
        </button>
      </div>
    </div>
  </div>
  <div data-aos="fade-right" class="tutorial-text-flex view-erase">
    <div class="tutorial-text-bg">
      <p>{{this.userInformation.text}}</p>
      <p>{{this.userInformation.userId.name}}</p>
      <button id="comments-view">
        <p>Comments</p>
        </butt>
    </div>
  </div>

  {{!-- quando o cara vem pelo create, não pelo tutorial all --}}
  {{#if Article}}
  <h1>{{this.title}}</h1>
  <h1>{{this.text}}</h1>
  <span>{{this.name}}</span>
  {{/if}}

  {{!-- caso error, recebera o error --}}
  {{#if error}}
  <h1>{{error}}</h1>
  {{/if}}

  {{!-- <h1>{{this.userInformation}}</h1> --}}


  <section id="section-comments">
    <button class="exit-comments">x</button>

    <h2 id="h2-comment-tile"></h2>
    <div id="comment-box" style="overflow-y:scroll; height:30%;">
      <div class="div-comments"></div>
    </div>

    <form class='comment-space' action="/comments-tutorial/create?id={{this.userInformation._id}}" method="post">
      <textarea name="text" id="text-comment" cols="100" rows="6" placeholder="write a comment..."></textarea>
      <button type="submit">
        <p class="comment">COMMENT</p>
      </button>
    </form>

  </section>